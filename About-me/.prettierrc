{
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 120
      }
    },
    {
      "files": "*.scss",
      "options": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 120
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "angular",
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 200
      }
    }
  ]
}
